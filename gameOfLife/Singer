import java.util.*;
import java.io.*;
import javax.swing.JOptionPane; 

 public class Singer extends Career
 {
   String firstName;
   String lastName;
   protected int amount;

  public Singer(String firstName, String lastName)
	{
		super(firstName, lastName);
    
	}

   //The singer inputs how many albums they sold in their career
  public int albumsSold()
	{
		String str = JOptionPane.showInputDialog(null, "How many albums have you sold in your career (keep under 40)?");
		int n = Integer.parseInt(str); 
		return n;
	}

  //money is add to the balance based on how many albums were sold
	public void getMoney() {
	      balance += albumsSold() * 2;
	      JOptionPane.showMessageDialog(null,"$" + balance + ". You were able to earn money because of the albums you sold... but there's a catch..."); 
	}

  //balance updated to subtract the money that was lost when songs flopped
  public void floppedSongs()
  {
	 Random rand = new Random();
    int num = rand.nextInt(10);
    balance -= num * 2;
    JOptionPane.showMessageDialog(null, "It seems you have " + num + " songs that flopped and you lost money. New Balance: $" + balance); 
  }

  //the money it takes to take care of the pet is subtracted
    public void petMoney()
  {
    balance -= 10;
        JOptionPane.showMessageDialog(null,"$" + balance + " balance after paying for pet food and checkups."); 
    
  }
   public void bonus() {
    	Random rand = new Random();
    	bonus = rand.nextInt(5000)+5000;
    	JOptionPane.showMessageDialog(null,"Bonus Amount: "+ bonus); 
    }
    public void vacayDays() {
      Random rand = new Random();
    	vacayDays = rand.nextInt(10)+5;
    	JOptionPane.showMessageDialog(null,"Number of vacation days: "+ vacayDays);
    }

  //The lifespan is compared with the balance to find out whether or not the person died or gained immortality.
	public void lifeSpan(){
			if(balance > 450)
      {
        JOptionPane.showMessageDialog(null, "The rules of this game state that when you're total money exeeds your lifeSpan you pass away. That has occured, so you're dead."); 
      }
    else
      {
        JOptionPane.showMessageDialog(null, "The rules of this game state that when you're total money exeeds your lifeSpan you pass away. You've pushed successfully finished this game without this occuring. New Skill Unlocked: Immortality."); 
      }
		   }

 }
   
