import java.util.*;
import javax.swing.JOptionPane; 
public class College extends Civilian {
	
	protected String job;
	Scanner scan = new Scanner(System.in);
	public College(String firstName, String lastName)
	{
		super(firstName, lastName);
	}
	
	//subtracting tuition
	public void getMoney(){
	      balance -= 30;
        JOptionPane.showMessageDialog(null,"$" + balance + " after paying tuition."); 
		}

  //the money it takes to take care of the pet is subtracted
  public void petMoney()
  {
    balance -= 10;
        JOptionPane.showMessageDialog(null,"$" + balance + " after bribing the school to let you keep your pet in the dorms.");
  }
  
	//lifespan reduced
	public void lifeSpan(){
	     JOptionPane.showMessageDialog(null, "You're lifespan has been reduced to from 500 to 450 years due to stress.");
	   }
}

	
