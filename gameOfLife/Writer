import java.util.*;
 import java.io.*;
 import javax.swing.JOptionPane; 
 
  public class Writer extends Career
  {
    // instance variables
    String firstName;
    String lastName;
    private int amount;

    // constructor
   public Writer(String firstName, String lastName)
   {
     super(firstName, lastName);     
   }

    // run these methods when user chooses 'Writer' as a career
    public void intro()
    {
      JOptionPane.showMessageDialog(null, "As a writer, you will be able to write or publish existing books.", "Career: Writer", amount);
      JOptionPane.showMessageDialog(null, "If your book is published, $50 will be added to your balance. Good luck!", "Career: Writer", amount);
      makeBook();
      published();
    }

    // user creates a book 
    public void makeBook() 
    {
      String title = JOptionPane.showInputDialog(null, "Type up title of story: ");  
      String amount = JOptionPane.showInputDialog(null, "Type up story: ");  
      JOptionPane.showMessageDialog(null, amount);
 
    }

    // publishing house randomnly decides if user's book is published
     public void published()
     {
       Random rand = new Random();
       int gen = rand.nextInt(10)+1;
       
       // Random number generator
       if ((gen % 2) == 0)
       {
         // display message and add to balance
         JOptionPane.showMessageDialog(null, "Book Published");
         balance += 50;

       }
       else
       {
         // displays message and remove from balance
         JOptionPane.showMessageDialog(null, "Book Rejected"); 
         balance -= 50;
       }
     }
 
    //the money it takes to take care of the pet is subtracted
    public void petMoney()
   {
     balance -= 10;
         JOptionPane.showMessageDialog(null,"$" + balance + " balance after paying for pet food and checkups."); 
   }
    public void bonus() {
    	Random rand = new Random();
    	bonus = rand.nextInt(5000)+5000;
    	JOptionPane.showMessageDialog(null,"Bonus Amount: "+ bonus); 
  
    }
    public void vacayDays() {
      Random rand = new Random();
    	vacayDays = rand.nextInt(10)+5;
    	JOptionPane.showMessageDialog(null,"Number of vacation days: "+ vacayDays);
    }
 
    //The lifespan is compared with the balance to find out whether or not the person died or gained immortality.
    public void lifeSpan(){
       if(balance > 410)
       {
         JOptionPane.showMessageDialog(null, "The rules of this game state that when you're total money exeeds your lifeSpan you pass away. That has occured, so you're dead."); 
       }
     else
       {
         JOptionPane.showMessageDialog(null, "The rules of this game state that when you're total money exeeds your lifeSpan you pass away. You've pushed successfully finished this game without this occuring. New Skill Unlocked: Immortality."); 
       }
      }
 }
  
