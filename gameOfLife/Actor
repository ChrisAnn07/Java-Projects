// Shayari
import javax.swing.*;
import java.util.*;
import java.io.*;

// Shayari
public class Actor extends Career
{
  // instance variables
  protected int amount;
  protected String stageName;
  protected String movie;
  protected boolean success;
  private String response, language;

  // constructor
  public Actor(String firstName, String lastName)
  {
    super(firstName, lastName);
    
  }

   // run these methods when user chooses 'Actor' as a career
  public void intro()
  {
    JOptionPane.showMessageDialog(null, "As an actor, you can choose to star in movies.", "Career: Actor", amount);
    JOptionPane.showMessageDialog(null, "Based on your acting prowess, the box office shall decide if you're a hit or flop!", "Career: Actor", amount);
    setStageName();
    chooseMovie();
    success();
  }
  
  // user sets a stage name
  public void setStageName()
  {
    response = JOptionPane.showInputDialog(null, "Would you like a stage name? Please type yes or no.");  
    
    if (response.equals("yes"))
        stageName = JOptionPane.showInputDialog(null, "Please enter a stage name: ");  
    else
        stageName = JOptionPane.showInputDialog("Please enter your real name: ");
  }
  
  // user is assigned to a different movie
  public void chooseMovie()
  {
    Random rand = new Random();
    int index = rand.nextInt(3)+1;
    String eMovie;
    String kMovie;
    String hMovie;
    String sMovie;


    JOptionPane.showMessageDialog(null, "Your studio will assign you to a random movie.", null, amount);
    String language = JOptionPane.showInputDialog("First, do you have a language preference? Please type it here: ");
    
    ArrayList<String> englishMovies = new ArrayList<String>(Arrays.asList("The Half of It", "Creed III", "Top Gun Maverick"));
    ArrayList<String> koreanMovies = new ArrayList<String>(Arrays.asList("Parasite", "Minari", "The Goblin"));
    ArrayList<String> hindiMovies = new ArrayList<String>(Arrays.asList("Swades", "My Name is Khan", "Kabhi Kushi Kabhi Gham"));
    ArrayList<String> spanishMovies = new ArrayList<String>(Arrays.asList("Mirage", "Veronica", "Kabhi Kushi Kabhi Gham"));
    
    if (language.equals("English"))
    {
      eMovie = englishMovies.get(index);
      JOptionPane.showMessageDialog(null, eMovie);
    }
    else if (language.equals("Korean"))
    {
      kMovie = koreanMovies.get(index);
      JOptionPane.showMessageDialog(null, kMovie);
    }
    else if (language.equals("Spanish"))
    {
      sMovie = spanishMovies.get(index);
      JOptionPane.showMessageDialog(null, sMovie);
    }
    else if (language.equals("Hindi"))  
    {
      hMovie = hindiMovies.get(index);
      JOptionPane.showMessageDialog(null, hMovie);
    }
    else
        JOptionPane.showInputDialog("Sorry that's not an option yet. Your language has been set to English.");
        language = "English";
  }
  
  // randomnly determine if movie is hit or flop
  public void success()
  {
    boolean r = false;
    if (r == false)
    {
        JOptionPane.showMessageDialog(null, "hit");
    }
    else
    {
        JOptionPane.showMessageDialog(null, "flop");
    }
}
    //money taken off balance to pay for pets
    public void petMoney()
  {
    balance -= 10;
        JOptionPane.showMessageDialog(null,"$" + balance + " balance after paying for pet food and checkups."); 
  }

  //lifespan comparison which determines whether or not the person lives
	public void lifeSpan(){
			if(balance > 410)
      {
        JOptionPane.showMessageDialog(null, "The rules of this game state that when you're total money exeeds your lifeSpan you pass away. That has occured, so you're dead."); 
      }
    else
      {
        JOptionPane.showMessageDialog(null, "The rules of this game state that when you're total money exeeds your lifeSpan you pass away. You've pushed successfully finished this game without this occuring. New Skill Unlocked: Immortality."); 
      }
	   }
}


  
  
  
