public class Career extends Civilian
  {
protected int bonus, vacayDays;
    public Career(String firstName, String lastName){
      super(firstName, lastName);
    }

  //money for bonus
  public void bonus() {
    	bonus = 1200;
    	JOptionPane.showMessageDialog(null,"Bonus Amount: "+ bonus); 
  
    }
    //number of vacation days
    public void vacayDays() {
    	JOptionPane.showMessageDialog(null,"Number of vacation days: "+ 10);
    }

    //the money it takes to take care of the pet is subtracted
    public void petMoney()
  {
    balance -= 10;
        JOptionPane.showMessageDialog(null,"$" + balance + " balance after paying for a nanny to babysit your pet"); 
      
  }

    //The lifespan is compared with the balance to find out whether or not the person died or gained immortality.
    public void lifeSpan(){
	     JOptionPane.showMessageDialog(null, "You're lifespan has been reduced to from 500 to 410 years due to stress.");
	   
	     }
 
  }
